<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:text="Solicitud de Garantia"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/img_garantia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_garantia"
        android:layout_width="234dp"
        android:layout_height="131dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/textView_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_nombre"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="87dp"
        android:text="nombre del cliente"
        android:textAlignment="center"
        android:textColor="#1E2738"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_seleccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_garantia"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_seleccion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:text="seleccione el tipo de daÃ±o"
        android:textAlignment="center"
        android:textColor="#1E2738"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nombre"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bnt_enviarsolicitaciongarantia"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="37dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:text="Enviar"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_seleccion" />

</androidx.constraintlayout.widget.ConstraintLayout>